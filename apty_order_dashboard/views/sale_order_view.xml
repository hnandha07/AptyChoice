<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_view_inherit" model="ir.ui.view">
        <field name="name">sale.order.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_information']/group[1]/group[2]" position="after">
                <group string="Date And Time Stamp For Order">
                    <field name="sale_order_date"/>
                    <field name="sale_preparing_date"/>
                    <field name="sale_ready_date"/>
                    <field name="sale_picked_date"/>
                    <field name="sale_delivered_date"/>
                    <field name="sale_cancelled_date"/>
                </group>
            </xpath>

        </field>
    </record>
</odoo>